{
  "tasks": {
    "ltco_styles": {
      "srcPath": "src/styles/**/*.scss",
      "destPath": "public/styles"
    },
    "ltco_scripts": {
      "srcPath": [
        "src/scripts/**/*"
      ],
      "destPath": "public/scripts"
    },
    "ltco_plugins_styles": {
      "srcPath": [
        "node_modules/flickity/dist/flickity.min.css"
      ],
      "destPath": "public/styles"
    },
    "ltco_plugins_scripts": {
      "srcPath": [
        "node_modules/jquery/dist/jquery.min.js",
        "node_modules/flickity/dist/flickity.pkgd.min.js"
      ],
      "destPath": "public/scripts"
    },
    "ltco_images": {
      "srcPath": "src/images/**/*",
      "destPath": "public/assets"
    },
    "ltco_svgs": {
      "srcPath": "src/svgs/**/*.svg",
      "destPath": "public/assets"
    },
    "ltco_all": {
      "srcPath": "src/html/**/*.html",
      "destPath": "public"
    }
  },
  "watch": {
    "ltco_styles": "src/styles/**",
    "ltco_scripts": "src/scripts/**",
    "ltco_images": "src/images/**",
    "ltco_svgs": "src/svgs/**",
    "ltco_all": "src/**/*.html"
  }
}